<%- layout('layouts/boiler') %>

    <button data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar" aria-controls="logo-sidebar"
        type="button"
        class="inline-flex items-center p-2 mt-2 ms-3 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
        <span class="sr-only">Open sidebar</span>
        <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg">
            <path clip-rule="evenodd" fill-rule="evenodd"
                d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z">
            </path>
        </svg>
    </button>

    <aside id="logo-sidebar"
        class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0"
        aria-label="Sidebar">
        <div class="h-full px-3 py-4 overflow-y-auto bg-gray-50 dark:bg-gray-800">
            <a href="/" class="flex items-center ps-0.8 mb-5">
                <img src="https://codersclutch.com/wp-content/uploads/2024/05/cropped-coders-logo.png"
                    class="h-14 me-3 sm:h-16" alt="Flowbite Logo" />
            </a>

            <ul class="space-y-2 font-medium">
                <li>
                    <a href="#"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-line-chart-line"></i>
                        <span class="ms-3">Analytics</span>
                    </a>
                </li>
                <li>
                    <a href="#"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-settings-5-line"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Setting</span>
                    </a>
                </li>
                <li>
                    <a href="#"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-notification-3-line"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Notifications</span>
                        <span
                            class="inline-flex items-center justify-center w-3 h-3 p-3 ms-3 text-sm font-medium text-blue-800 bg-blue-100 rounded-full dark:bg-blue-900 dark:text-blue-300">3</span>
                    </a>
                </li>
                <li>
                    <a href="/bookings/allUsers"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-group-line"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Users</span>
                    </a>
                </li>
                <li>
                    <a href="#"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-shield-check-line"></i> <span class="flex-1 ms-3 whitespace-nowrap">User Roles &
                            Permissions</span>
                    </a>
                </li>
                <li>
                    <a href="#"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-headphone-line"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Virtual Meeting</span>
                    </a>
                </li>

                <li>
                    <a href="/api/auth/login"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-login-box-line"></i>
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M1 8h11m0 0L8 4m4 4-4 4m4-11h3a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-3" />
                        </svg>
                        <span class="flex-1 ms-3 whitespace-nowrap">Sign In</span>
                    </a>
                </li>
                <li>
                    <a href="/api/auth/register"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-user-add-line"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Sign Up</span>
                    </a>
                </li>
            </ul>
        </div>
    </aside>

    <div class="p-4 sm:ml-64">
        <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">

            <!-- Section: Pending and Approved Bookings -->
            <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
                <div class="flex flex-col items-center justify-center px-4 py-6 rounded bg-gray-50 dark:bg-gray-800">
                    <p class="text-md font-semibold text-gray-600 dark:text-black flex items-center gap-2">
                        <i class="ri-hourglass-line text-orange-500 pr-3 text-xl"></i> Pending Bookings
                    </p>
                    <span
                        class="inline-flex items-center justify-center w-8 h-8 mt-2 text-sm font-medium text-orange-500 bg-orange-100 rounded-full dark:bg-orange-900 dark:text-orange-300">
                        8
                    </span>
                </div>

                <div class="flex flex-col items-center justify-center px-4 py-6 rounded bg-gray-50 dark:bg-gray-800">
                    <p class="text-md font-semibold text-gray-600 dark:text-black flex items-center gap-2">
                        <i class="ri-checkbox-circle-line text-green-600 pr-3 text-xl"></i> Approved Bookings
                    </p>
                    <span
                        class="inline-flex items-center justify-center w-8 h-8 mt-2 text-sm font-medium text-green-600 bg-green-100 rounded-full dark:bg-green-900 dark:text-green-300">
                        15
                    </span>
                </div>
            </div>

            <!-- Section: Complete and Cancelled Meetings -->
            <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
                <div class="flex flex-col items-center justify-center px-4 py-6 rounded bg-gray-50 dark:bg-gray-800">
                    <p class="text-md font-semibold text-gray-600 dark:text-black flex items-center gap-2">
                        <i class="ri-checkbox-multiple-fill text-blue-600 pr-3 text-xl"></i> Complete Meeting
                    </p>
                    <span
                        class="inline-flex items-center justify-center w-8 h-8 mt-2 text-sm font-medium text-blue-600 bg-blue-100 rounded-full dark:bg-blue-900 dark:text-blue-300">
                        20
                    </span>
                </div>

                <div class="flex flex-col items-center justify-center px-4 py-6 rounded bg-gray-50 dark:bg-gray-800">
                    <p class="text-md font-semibold text-gray-600 dark:text-black flex items-center gap-2">
                        <i class="ri-close-circle-line text-red-700 pr-3 text-xl"></i> Cancelled Meeting
                    </p>
                    <span
                        class="inline-flex items-center justify-center w-8 h-8 mt-2 text-sm font-medium text-red-700 bg-red-100 rounded-full dark:bg-red-900 dark:text-red-300">
                        20
                    </span>
                </div>
            </div>

            <!-- Container with two columns -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-4">

                <!-- Appointment Chart (left side) -->
                <div class="flex items-center justify-center w-full h-96 mb-4 rounded bg-gray-50 dark:bg-gray-800">
                    <canvas id="appointmentChart" class="w-full h-full"></canvas>
                </div>

                <!-- Line Chart (right side) -->
                <div class="flex items-center justify-center w-full h-96 mb-4 rounded bg-gray-50 dark:bg-gray-800">
                    <canvas id="bookingLineGraph" class="w-full h-full"></canvas>
                </div>

            </div>

        </div>
    </div>

    <script src="/javascripts/numAppointment.js"></script>
    <script src="/javascripts/appointRise.js"></script>