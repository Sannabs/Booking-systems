                <!-- Side Menu for Assigning Privileges -->
                <div id="assignPrivilegesModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
                    <div class="flex justify-end p-4">
                        <button onclick="closeAssignPrivilegesModal()" class="text-white">Close</button>
