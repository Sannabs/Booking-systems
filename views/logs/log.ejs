<%- layout('layouts/boiler') %>
    <button data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar" aria-controls="logo-sidebar"
        type="button"
        class="inline-flex items-center p-2 mt-2 ms-3 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
        <span class="sr-only">Open sidebar</span>
        <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg">
            <path clip-rule="evenodd" fill-rule="evenodd"
                d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z">
            </path>
        </svg>
    </button>

    <aside id="logo-sidebar"
        class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0"
        aria-label="Sidebar">
        <div class="h-full px-3 py-4 overflow-y-auto bg-gray-50 dark:bg-gray-800">
            <a href="/" class="flex items-center ps-0.8 mb-5">
                <img src="https://codersclutch.com/wp-content/uploads/2024/05/cropped-coders-logo.png"
                    class="h-14 me-3 sm:h-16" alt="Flowbite Logo" />
            </a>

            <ul class="space-y-2 font-medium">
                <li>
                    <a href="/bookings"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-dashboard-line"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Dashboard</span>
                    </a>
                </li>

                <li>
                    <a href="/bookings/analytics"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-line-chart-line"></i>
                        <span class="ms-3">Analytics</span>
                    </a>
                </li>
                <li>
                    <a href="#"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-settings-5-line"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Setting</span>
                    </a>
                </li>
                <li>
                    <a href="#"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-notification-3-line"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Notifications</span>
                        <span
                            class="inline-flex items-center justify-center w-3 h-3 p-3 ms-3 text-sm font-medium text-blue-800 bg-blue-100 rounded-full dark:bg-blue-900 dark:text-blue-300">3</span>
                    </a>
                </li>
                <li>
                    <a href="/bookings/allUsers"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-group-line"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Users</span>
                    </a>
                </li>
                <li>
                    <a href="#"
                        class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        <i class="ri-headphone-line"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Virtual Meeting</span>
                    </a>
                </li>
                <% if(!currentUser) { %>
                    <li>
                        <a href="/login"
                            class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                            <i class="ri-login-box-line"></i>
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M1 8h11m0 0L8 4m4 4-4 4m4-11h3a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-3" />
                            </svg>
                            <span class="flex-1 ms-3 whitespace-nowrap">Sign In</span>
                        </a>
                    </li>
                    <% } %>

                        <% if(currentUser) { %>
                            <li>
                                <a href="/logout"
                                    class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                                    <i class="ri-login-box-line"></i>
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M1 8h11m0 0L8 4m4 4-4 4m4-11h3a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-3" />
                                    </svg>
                                    <span class="flex-1 ms-3 whitespace-nowrap">Logout</span>
                                </a>
                            </li>
                            <% } %>
                                <% if(currentUser && currentUser.role==='admin' ) { %>
                                    <li>
                                        <a href="/register"
                                            class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                                            <i class="ri-user-add-line"></i>
                                            <span class="flex-1 ms-3 whitespace-nowrap">Invite User</span>
                                        </a>
                                    </li>
                                    <% } %>
                                        <% if(currentUser && currentUser.role==='admin' ) { %>
                                            <li>
                                                <a href="/api/logs"
                                                    class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                                                    <i class="fas fa-history"></i>
                                                    <span class="flex-1 ms-3 whitespace-nowrap">Audit Logs</span>
                                                </a>
                                            </li>
                                            <% } %>

            </ul>
        </div>
    </aside>

    <div class="p-4 sm:ml-64">
        <div class="container mx-auto px-4 py-8">
            <h1 class="text-2xl font-bold mb-6">Audit Logs</h1>
            <div class="overflow-x-auto">
                <table class="table-auto w-full border-collapse border border-gray-300">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="border border-gray-300 px-4 py-2 text-left">User</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">IP Address</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Device Name</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Browser</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Device Type</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">OS</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">CPU Architecture</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Location</th>
                            <th class="border border-gray-300 px-4 py-2 text-left">Login Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (logs.length> 0) { %>
                            <% logs.forEach(log=> { %>
                                <tr class="hover:bg-gray-50">
                                    <!-- User -->
                                    <td class="border border-gray-300 px-4 py-2 flex items-center space-x-3">
                                        <img src="<%= log.userId.avatar || '/images/default-avatar.png' %>"
                                            alt="<%= log.userId.username || 'User Avatar' %>"
                                            class="w-8 h-8 rounded-full">
                                        <span>
                                            <%= log.userId ? log.userId.username : 'Unknown User' %>
                                        </span>
                                    </td>

                                    <!-- IP Address -->
                                    <td class="border border-gray-300 px-4 py-2">
                                        <%= log.ipAddress %>
                                    </td>

                                    <!-- Device Name -->
                                    <td class="border border-gray-300 px-4 py-2">
                                        <%= log.deviceName %>
                                    </td>

                                    <!-- Browser -->
                                    <td class="border border-gray-300 px-4 py-2">
                                        <%= log.browser.name %> (v<%= log.browser.version %>)
                                    </td>

                                    <!-- Device Type -->
                                    <td class="border border-gray-300 px-4 py-2">
                                        <%= log.device.type %> (<%= log.device.model %>)
                                    </td>

                                    <!-- OS -->
                                    <td class="border border-gray-300 px-4 py-2">
                                        <%= log.os.name %> (v<%= log.os.version %>)
                                    </td>

                                    <!-- CPU Architecture -->
                                    <td class="border border-gray-300 px-4 py-2">
                                        <%= log.cpu.architecture %>
                                    </td>

                                    <!-- Location -->
                                    <td class="border border-gray-300 px-4 py-2">
                                        <%= log.location.city || 'N/A' %>, <%= log.location.country || 'N/A' %>
                                                <br>
                                                Lat: <%= log.location.coordinates.latitude || 'N/A' %>,
                                                    Lon: <%= log.location.coordinates.longitude || 'N/A' %>
                                    </td>

                                    <!-- Login Time -->
                                    <td class="border border-gray-300 px-4 py-2">
                                        <%= new Date(log.loginTime).toLocaleString() %>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="9" class="border border-gray-300 px-4 py-2 text-center">No logs
                                                found</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>